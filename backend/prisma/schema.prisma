generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  LIBRARIAN
  MEMBER
}

model Category {
  id              BigInt            @id @default(autoincrement())
  name            String            @unique @db.VarChar(255)
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  deletedAt       DateTime?         @map("deleted_at")
  bookCategories  BookCategory[]

  @@map("categories")
}

model BookCategory {
  id          BigInt    @id @default(autoincrement())
  bookId      BigInt    @map("book_id")
  categoryId  BigInt    @map("category_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  book        Book      @relation(fields: [bookId], references: [id])
  category    Category  @relation(fields: [categoryId], references: [id])

  @@map("book_categories")
}

model User {
  id          BigInt    @id @default(autoincrement())
  name        String    @db.VarChar(255)
  email       String    @unique @db.VarChar(255)
  password    String    @db.VarChar(255)  // TAMBAHAN
  phone       String    @db.VarChar(255)
  address     String    @db.VarChar(255)
  role        Role      @default(MEMBER)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")
  
  loansAsLibrarian  Loan[] @relation("LibrarianLoans")
  loansAsMember     Loan[] @relation("MemberLoans")

  @@map("users")
}

model Book {
  id              BigInt          @id @default(autoincrement())
  title           String          @db.VarChar(255)
  description     String          @db.Text
  authors         String          @db.VarChar(255)
  isbn            String          @db.VarChar(255)
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")
  deletedAt       DateTime?       @map("deleted_at")
  
  bookCategories  BookCategory[]
  loans           Loan[]

  @@map("books")
}

model Loan {
  id          BigInt    @id @default(autoincrement())
  bookId      BigInt    @map("book_id")
  librarianId BigInt    @map("librarian_id")
  memberId    BigInt    @map("member_id")
  loanAt      DateTime  @map("loan_at")
  returnedAt  DateTime? @map("returned_at")
  note        String?   @db.VarChar(255)
  
  book        Book      @relation(fields: [bookId], references: [id])
  librarian   User      @relation("LibrarianLoans", fields: [librarianId], references: [id])
  member      User      @relation("MemberLoans", fields: [memberId], references: [id])

  @@map("loans")
}